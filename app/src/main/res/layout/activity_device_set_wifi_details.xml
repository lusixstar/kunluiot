<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/tool_bar"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:title="@string/device_set_net" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tool_bar">

        <LinearLayout
            android:id="@+id/ll_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tip_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="41dp"
                android:text="@string/countdown_of_distribution_network"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_tip_sub_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/routers_mobile_phones_and_devices_should_be_as_close_as_possible"
                android:textColor="#ff595959"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_finish"
            android:layout_below="@+id/ll_tip"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_config_network"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <com.example.kiotsdk.widget.roundprogress.RateTextPercentageRing
                    android:id="@+id/roundProgressBar"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginBottom="30dp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_config_network_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    android:src="@mipmap/ic_config_step_finish"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <LinearLayout
                    android:id="@+id/step_parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_marginRight="7dp"
                            android:src="@mipmap/ic_config_step_success" />

                        <TextView
                            android:id="@+id/tv_first_step"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/obtain_the_distribution_network_security_code"
                            android:textColor="#808080"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_second_step"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_marginRight="7dp"
                            android:src="@mipmap/ic_config_step_success"
                            android:visibility="gone"
                            tools:visibility="visible" />

                        <com.example.kiotsdk.widget.GifView
                            android:id="@+id/gif_second_step"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_marginRight="7dp"
                            android:visibility="visible"
                            app:gif="@mipmap/ic_config_device_next_step" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="@string/device_connection_router"
                            android:textColor="#808080"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_third_step"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_marginRight="7dp"
                            android:src="@mipmap/ic_config_step_success"
                            android:visibility="gone"
                            tools:visibility="visible" />

                        <com.example.kiotsdk.widget.GifView
                            android:id="@+id/gif_third_step"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_marginRight="7dp"
                            android:visibility="visible"
                            app:gif="@mipmap/ic_config_device_next_step" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="@string/_cloud_verification_device_information"
                            android:textColor="#808080"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_four_step"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_marginRight="7dp"
                            android:src="@mipmap/ic_config_step_success"
                            android:visibility="gone"
                            tools:visibility="visible" />

                        <com.example.kiotsdk.widget.GifView
                            android:id="@+id/gif_four_step"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_marginRight="7dp"
                            android:visibility="visible"
                            app:gif="@mipmap/ic_config_device_next_step" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="@string/equipment_landing_in_the_cloud_step_4"
                            android:textColor="#808080"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_five_step"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_marginRight="7dp"
                            android:src="@mipmap/ic_config_step_success"
                            android:visibility="gone"
                            tools:visibility="visible" />

                        <com.example.kiotsdk.widget.GifView
                            android:id="@+id/gif_five_step"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_marginRight="7dp"
                            android:visibility="visible"
                            app:gif="@mipmap/ic_config_device_next_step" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="@string/binding_equipment"
                            android:textColor="#808080"
                            android:textSize="12sp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_config_network_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_config_step_error" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_config_network_error_tip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/device_connection_router"
                            android:textColor="#000000"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_config_network_error"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:lineSpacingExtra="8dp"
                            android:text="@string/analysis_result_no_device_is_bound_please_try_to_use_compatibility_mode_to_complete_equipment_distribution_network"
                            android:textColor="#808080"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:src="@mipmap/ic_device_config_wifi_node" />

                            <TextView
                                android:id="@+id/tv_node"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/node"
                                android:textColor="#000000"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="5dp"
                                android:text="●"
                                android:textColor="#23D21A"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/tv_api_state"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_10"
                                android:layout_weight="1"
                                android:text="@string/api_status"
                                android:textColor="#23D21A"
                                android:textSize="12sp" />

                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:layout_marginRight="7dp"
                                android:src="@mipmap/ic_config_step_success" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_4"
                                android:layout_marginRight="5dp"
                                android:text="●"
                                android:textColor="#23D21A"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/tv_app_channel"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_10"
                                android:layout_weight="1"
                                android:text="@string/app_channel"
                                android:textColor="#23D21A"
                                android:textSize="12sp" />

                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:layout_marginRight="7dp"
                                android:src="@mipmap/ic_config_step_success" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="5dp"
                                android:text="●"
                                android:textColor="#23D21A"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/tv_device_channel"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_10"
                                android:layout_weight="1"
                                android:text="@string/equipment_channel_1"
                                android:textColor="#23D21A"
                                android:textSize="12sp" />

                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:layout_marginRight="7dp"
                                android:src="@mipmap/ic_config_step_success" />
                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/btn_login_bg"
            android:text="@string/complete_distribution_network"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="invisible" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>